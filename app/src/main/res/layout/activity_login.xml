<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0000"
    tools:context="com.example.hasansafwanhajjar.loginproject.LoginActivity">



        <LinearLayout
            android:id="@+id/ly_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background"
            android:visibility="invisible">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_home_bank"
                android:id="@+id/imageView"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp"

                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:inputType="textPersonName"
                android:text="             Name  "
                android:ems="10"
                android:id="@+id/login_ETXT_Name"
                android:drawableLeft="@drawable/ic_action_user"
                android:textSize="24dp"
                android:layout_marginBottom="15dp"
                android:background="@color/colorAccent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:inputType="textPassword"
                android:hint="    Password"
                android:textColorHint="#000000"
                android:ems="10"
                android:id="@+id/login_ETXT_password"
                android:drawableLeft="@drawable/ic_action_lock"
                android:textSize="24dp"
                android:layout_marginBottom="15dp"
                android:background="@color/colorAccent"
                android:layout_above="@+id/button2"
                android:layout_centerHorizontal="true" />






        </LinearLayout>

            <Button
                android:text="log in"
                android:textSize="24dp"
                android:drawableLeft="@drawable/ic_action_login"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/btn_login"
                android:textColor="#000"
                android:background="@color/colorAccent"
                android:onClick="btn_login"
                />

            <Button
                android:text="Register"
                android:textSize="24dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/btn_rigister"
                android:drawableLeft="@drawable/ic_action_rigister"
                android:textColor="#000"
                android:background="@color/colorAccent"
                android:onClick="btn_move_register"

                />



</LinearLayout>
