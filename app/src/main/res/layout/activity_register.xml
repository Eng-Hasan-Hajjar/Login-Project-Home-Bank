<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0000"
    tools:context="com.example.hasansafwanhajjar.loginproject.activity_register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edaa">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textColor="@color/colorAccent"
            android:textSize="24dp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="     here plase "
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="24dp"
            android:layout_marginLeft="34dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edaa"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password:"
            android:textColor="@color/colorAccent"
            android:textSize="24dp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="here plase "
            android:inputType="textPassword"
            android:ems="10"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="24dp"
            android:layout_marginLeft="34dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edaa"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="confirm : "
            android:textColor="@color/colorAccent"
            android:textSize="24dp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint=" here plase "
            android:inputType="textPassword"
            android:ems="10"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="24dp"
            android:layout_marginLeft="34dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edaa"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age : "
            android:textColor="@color/colorAccent"
            android:textSize="24dp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="         here plase "
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="24dp"
            android:layout_marginLeft="34dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#edaa"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your purpose is:"
            android:textColor="@color/colorAccent"
            android:textSize="24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#edaa"
        android:layout_marginTop="15dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="انت باحث عن وظيفة"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/chBox_employee"
            android:layout_marginBottom="15dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="انت ناشر لوظيفة"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/chBox_company"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
    >
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_action_rigister"
        android:text="  Register Now"
        android:textSize="24dp"
        android:textColor="#000"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:shadowColor="@color/colorPrimaryDark"
        android:textAppearance="@style/Widget.Design.BottomNavigationView"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        />
</LinearLayout>




</LinearLayout>
